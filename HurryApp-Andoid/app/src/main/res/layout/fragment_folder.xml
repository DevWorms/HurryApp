                        android:layout_height="wrap_content"
                        android:id="@+id/btnMasBlan"
                        android:layout_weight="4"
                        android:singleLine="false"
                        android:background="@android:drawable/ic_menu_add"
                        style="@style/MessengerButton.Blue" />

