<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:background="@drawable/fondo"
    android:layout_gravity="center_horizontal|center_vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        style="@style/Animation.AppCompat.Dialog"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folio:"
                android:textColor="#f5f5f5"
                android:id="@+id/textView12"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:gravity="center_horizontal"
                android:layout_marginRight="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f5f5f5"
                android:id="@+id/txt_histo_info_folio"
                android:layout_gravity="right|center_horizontal"
                android:gravity="left"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:textColor="#f5f5f5"
                android:id="@+id/textView14"
                android:gravity="center_horizontal"
                android:layout_gravity="left|center_horizontal"
                android:layout_weight="0"
                android:layout_marginRight="23dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f5f5f5"
                android:id="@+id/txt_histo_info_fecha"
                android:layout_gravity="right|center_horizontal"
                android:gravity="left"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio:"
                android:textColor="#f5f5f5"
                android:id="@+id/textView16"
                android:gravity="center_horizontal"
                android:layout_gravity="left|center_horizontal"
                android:layout_weight="0"
                android:layout_marginRight="23dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f5f5f5"
                android:id="@+id/txt_histo_info_precio"
                android:layout_gravity="right|center_horizontal"
                android:gravity="left"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sucursal:"
                android:textColor="#f5f5f5"
                android:id="@+id/textView17"
                android:gravity="center_horizontal"
                android:layout_gravity="left|center_horizontal"
                android:layout_weight="0"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f5f5f5"
                android:id="@+id/txt_histo_info_sucur"
                android:layout_gravity="right|center_horizontal"
                android:gravity="left"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textColor="#f5f5f5"
                android:id="@+id/textView18"
                android:gravity="center_horizontal"
                android:layout_gravity="left|center_horizontal"
                android:layout_weight="0"
                android:layout_marginRight="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f5f5f5"
                android:id="@+id/txt_histo_info_namedocu"
                android:layout_gravity="right|center_horizontal"
                android:gravity="left"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"

            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textColor="#f5f5f5"
                android:id="@+id/textView15"
                android:gravity="center_horizontal"
                android:layout_gravity="left|center_horizontal"
                android:layout_weight="0"
                android:layout_marginRight="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f5f5f5"
                android:id="@+id/txt_histo_info_hora"
                android:layout_gravity="right|center_horizontal"
                android:gravity="left"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="OK"
            android:textColor="#ffb000"
            android:id="@+id/btn_ok"
            android:background="#ff0037"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>